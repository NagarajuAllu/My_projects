  <methodList>
    <method name="validationRule_internalServiceTypeUniqueness" type="crule">
      <code>AE0085</code>
      <path>doc_ds_ws.STC_SERVICETYPE_NAME_MAP/leaf_internalServiceType</path>
      <severity>error</severity>
      <type>validator</type>
      <valueType>dtype_com.conceptwave.system.Boolean</valueType>
      <script><![CDATA[
        var alreadyExist = false;
        if(! document.isStored) {
            var foundValue = ds_ws.getCRMServiceTypeForOMInternalServiceType(document.internalServiceType);
            alreadyExist = (foundValue != null);
        }

        debugPrintln("validationRule_internalServiceTypeUniqueness[" + document.internalServiceType + "," + document.crmServiceType + "] = " + alreadyExist);
        return alreadyExist;
      ]]></script>
    </method>
    <method name="validationRule_crmServiceTypeUniqueness" type="crule">
      <code>AE0082</code>
      <path>doc_ds_ws.STC_SERVICETYPE_NAME_MAP/leaf_crmServiceType</path>
      <severity>error</severity>
      <type>validator</type>
      <valueType>dtype_com.conceptwave.system.Boolean</valueType>
      <script><![CDATA[
        var alreadyExist = false;

        var inputDoc = new Document("ds_ws.search_ServiceTypeNameMap");
        inputDoc.crmServiceType = document.crmServiceType;

        var resultList = Finder.runFinder("ds_ws.findServiceTypeNameMapDocument", "select", inputDoc);

        if(resultList != null && resultList.length > 0) {
            alreadyExist = (resultList[0].internalServiceType != document.internalServiceType);
        }

        debugPrintln("validationRule_crmServiceTypeUniqueness[" + document.internalServiceType + "," + document.crmServiceType + "] = " + alreadyExist);
        return alreadyExist;
      ]]></script>
    </method>
