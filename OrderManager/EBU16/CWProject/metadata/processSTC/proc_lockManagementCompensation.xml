        <label>Wait Time for Submit</label>
        <schedule type="sched">
          <duration type="dur">
            <methodList>
              <method name="cwOnDuration" type="action">
                <system>true</system>
                <script><![CDATA[
                  // configured time for sleeping
                  var submitSleep = Global.getConfigVariable("SLEEP_FOR_TIMEOUT_MINUTES", "3");

                  if(submitSleep == Number.NAN) {
                      submitSleep = 3;
                  }

                  // adding random and converting it from minutes to seconds
                  submitSleep = submitSleep*Math.random()*60;

                  debugPrintln("[" + common.common_currentDateAsStringDDMMYYYYHH24MISS() + "][" + this.id + "] - sleep for : " + submitSleep + " secs due to LOCK!");

                  return submitSleep;
                ]]></script>
              </method>
