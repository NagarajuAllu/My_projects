<?xml version="1.0" encoding="UTF-8" ?>
<findDoc name="configuration.mandatoryAttributesFinder">
  <extends>find_com.conceptwave.system.Finder</extends>
  <input>doc_configuration.mandatoryFieldSearchDoc</input>
  <label>Mandatory Attributes Finder</label>
  <maxRowsLimit>9999</maxRowsLimit>
  <metaVersion>21</metaVersion>
  <output>doc_configuration.mandatoryAttributeConfiguration</output>
  <sortList>
    <sort type="stitem">
      <path>doc_configuration.mandatoryAttributeConfiguration/leaf_objectType</path>
    </sort>
    <sort type="stitem">
      <path>doc_configuration.mandatoryAttributeConfiguration/leaf_fieldName</path>
    </sort>
  </sortList>
  <type>document</type>
  <vDetailForm>doc_configuration.mandatoryAttributeConfiguration/ui_UserInterface/frmui_Forms/exov_Default</vDetailForm>
  <volatility>10</volatility>
  <searchList>
    <search type="sitem">
      <document>doc_configuration.mandatoryFieldSearchDoc</document>
      <mappedDocument>doc_configuration.mandatoryAttributeConfiguration</mappedDocument>
      <mappedPath>doc_configuration.mandatoryAttributeConfiguration/leaf_objectType</mappedPath>
      <operation>equal</operation>
      <path>doc_configuration.mandatoryFieldSearchDoc/leaf_objectType</path>
    </search>
    <search type="sitem">
      <document>doc_configuration.mandatoryFieldSearchDoc</document>
      <mappedDocument>doc_configuration.mandatoryAttributeConfiguration</mappedDocument>
      <mappedPath>doc_configuration.mandatoryAttributeConfiguration/leaf_fieldName</mappedPath>
      <operation>like</operation>
      <path>doc_configuration.mandatoryFieldSearchDoc/leaf_fieldName</path>
    </search>
  </searchList>
  <methodList>
    <method name="addPerm" type="permMethod">
      <privilegesList>
        <privileges type="ppriv">
          <privilege>STC_ConfigPriv</privilege>
        </privileges>
      </privilegesList>
      <privilegesType>SOME</privilegesType>
      <script>return $psCondition;</script>
    </method>
    <method name="editablePerm" type="permMethod">
      <privilegesList>
        <privileges type="ppriv">
          <privilege>STC_ConfigPriv</privilege>
        </privileges>
      </privilegesList>
      <privilegesType>SOME</privilegesType>
      <script>return $psCondition;</script>
    </method>
  </methodList>
  <UserInterface name="UserInterface" type="ui">
    <extends>ui_com.conceptwave.system.FinderUserInterface</extends>
    <variableList>
      <variable name="result" type="uivar">
        <flags enum-type="metadataFlag">ARRAY</flags>
        <valueType>doc_configuration.mandatoryAttributeConfiguration</valueType>
      </variable>
      <variable name="search" type="uivar">
        <valueType>doc_configuration.mandatoryFieldSearchDoc/ui_UserInterface</valueType>
      </variable>
      <variable name="detail" type="uivar">
        <flags enum-type="metadataFlag">VALIDATE</flags>
        <valueType>doc_configuration.mandatoryAttributeConfiguration/ui_UserInterface</valueType>
      </variable>
    </variableList>
    <vformList>
      <vform name="Forms" type="frmui">
        <extends>ui_com.conceptwave.system.FinderUserInterface/frmui_Forms</extends>
        <overlayList>
          <overlay name="Result" type="exov">
            <base>ui_com.conceptwave.system.FinderUserInterface/frmui_Forms/vform_Result</base>
            <extends>ui_com.conceptwave.system.FinderUserInterface/frmui_Forms/vform_Result</extends>
            <label>Result</label>
            <overrideList>
              <override name="table" type="elvlt">
                <height>100%</height>
                <width>100%</width>
                <elementList>
                  <element name="mandatoryAttributesFinderResultTable" type="eltabl">
                    <onSelectChange type="varPath">
                      <variablePathList>
                        <variablePath>ui_com.conceptwave.system.MasterDetailUserInterface/action_OnSelChanged</variablePath>
                      </variablePathList>
                    </onSelectChange>
                    <variable type="varPath">
                      <variablePathList>
                        <variablePath>findDoc_configuration.mandatoryAttributesFinder/ui_UserInterface/uivar_result</variablePath>
                      </variablePathList>
                    </variable>
                    <elementList>
                      <element name="objectType" type="elslct">
                        <variable type="varPath">
                          <variablePathList>
                            <variablePath>findDoc_configuration.mandatoryAttributesFinder/ui_UserInterface/uivar_result</variablePath>
                            <variablePath>doc_configuration.mandatoryAttributeConfiguration/leaf_objectType</variablePath>
                          </variablePathList>
                        </variable>
                      </element>
                      <element name="fieldName" type="elfld">
                        <variable type="varPath">
                          <variablePathList>
                            <variablePath>findDoc_configuration.mandatoryAttributesFinder/ui_UserInterface/uivar_result</variablePath>
                            <variablePath>doc_configuration.mandatoryAttributeConfiguration/leaf_fieldName</variablePath>
                          </variablePathList>
                        </variable>
                      </element>
                    </elementList>
                  </element>
                </elementList>
              </override>
            </overrideList>
          </overlay>
          <overlay name="Default" type="exov">
            <base>ui_com.conceptwave.system.FinderUserInterface/frmui_Forms/exov_Default</base>
            <extends>ui_com.conceptwave.system.FinderUserInterface/frmui_Forms/exov_Default</extends>
            <label>Default</label>
            <overrideList>
              <override name="detailSection" type="elsect">
                <formReference type="varPath">
                  <variablePathList>
                    <variablePath>ui_com.conceptwave.system.MasterDetailUserInterface/uivar_detailForm</variablePath>
                  </variablePathList>
                </formReference>
                <variable type="varPath">
                  <variablePathList>
                    <variablePath>findDoc_configuration.mandatoryAttributesFinder/ui_UserInterface/uivar_detail</variablePath>
                  </variablePathList>
                </variable>
                <visible type="varPath">
                  <variablePathList>
                    <variablePath>ui_com.conceptwave.system.MasterDetailUserInterface/permMethod_detailVisible</variablePath>
                  </variablePathList>
                </visible>
              </override>
              <override name="searchFormSection" type="elsect">
                <formReference type="varPath">
                  <variablePathList>
                    <variablePath>ui_com.conceptwave.system.BaseFinderUserInterface/uivar_searchForm</variablePath>
                  </variablePathList>
                </formReference>
                <variable type="varPath">
                  <variablePathList>
                    <variablePath>findDoc_configuration.mandatoryAttributesFinder/ui_UserInterface/uivar_search</variablePath>
                  </variablePathList>
                </variable>
                <visible type="varPath">
                  <variablePathList>
                    <variablePath>ui_com.conceptwave.system.FinderUserInterface/permMethod_showSearchForm</variablePath>
                  </variablePathList>
                </visible>
              </override>
            </overrideList>
          </overlay>
        </overlayList>
      </vform>
    </vformList>
    <methodList>
      <method name="canDelete" type="permMethod">
        <privilegesList>
          <privileges type="ppriv">
            <privilege>STC_ConfigPriv</privilege>
          </privileges>
        </privilegesList>
        <privilegesType>SOME</privilegesType>
        <script>return $psCondition;</script>
      </method>
    </methodList>
  </UserInterface>
  <viewList>
    <view name="mandatoryAttributesFinderView" type="findVView">
      <inputOverlay>doc_configuration.mandatoryFieldSearchDoc/ui_UserInterface/frmui_Forms/exov_Default</inputOverlay>
      <label>Mandatory Attributes Finder</label>
      <outputOverlay>findDoc_configuration.mandatoryAttributesFinder/ui_UserInterface/frmui_Forms/exov_Result</outputOverlay>
      <showSearchForm>true</showSearchForm>
    </view>
  </viewList>
</findDoc>