      <method name="onInit" type="action">
        <valueType>nmeta_com.conceptwave.system.Object</valueType>
        <script><![CDATA[
          var onInit = this.cw$super_onInit();

          this.customAttrPickListFinderUI = new configuration.customAttributePickListValuesFinder.UserInterface(null, this);

          if(this.model.attributeType == "PickList") {
              this.customAttrPickListFinderUI.search.model.cwDocID = this.model.customAttributeId;
              this.customAttrPickListFinderUI.model.search();
          }

          return onInit;
        ]]></script>
      </method>
      <method name="save" type="usrActionMethod">
        <confirmation>doc_configuration.customAttribute/ui_UserInterface/uimthd_saveConfirmation</confirmation>
        <validate>true</validate>
        <script>this.cw$super_save();</script>
      </method>
      <method name="saveConfirmation" type="uimthd">
        <script><![CDATA[
          if(this.model.isStored) {
              return "AW0002";
          }

          return "AW0001";
        ]]></script>
      </method>
      <method name="addValueToPickList" type="uimthd">
        <script><![CDATA[
          var sequenceNumber = 1;
          if(this.customAttrPickListFinderUI.result != null && this.customAttrPickListFinderUI.result.length > 0) {
              sequenceNumber = this.customAttrPickListFinderUI.result[this.customAttrPickListFinderUI.result.length - 1].sequenceNumber + 1;
          }

          var newCustomAttr = new Document("configuration.customAttributePickListValue");
          newCustomAttr.customAttr_id = this.model.customAttributeId;
          newCustomAttr.sequenceNumber = sequenceNumber;
          newCustomAttr.save();

          configuration.compressCustomAttrPickListValueSequence(this.model.customAttributeId);

          this.customAttrPickListFinderUI.search.model.cwDocID = this.model.customAttributeId;
          this.customAttrPickListFinderUI.model.search();
          this.customAttrPickListFinderUI.result.setSelected(newCustomAttr);
        ]]></script>
      </method>
      <method name="removeValueFromPickListConfirm" type="uimthd">
        <script><![CDATA[return "AW0003";]]></script>
      </method>
      <method name="removeValueFromPickList" type="usrActionMethod">
        <confirmation>doc_configuration.customAttribute/ui_UserInterface/uimthd_removeValueFromPickListConfirm</confirmation>
        <script><![CDATA[
          if(this.customAttrPickListFinderUI.result.selected != null && this.customAttrPickListFinderUI.result.selected.length > 0) {
              if(this.customAttrPickListFinderUI.result.selected.length > 1) {
                  Global.throwException("UU0116");
              }
              else {
                  this.customAttrPickListFinderUI.result.selected[0].deleteItem();

                  configuration.compressCustomAttrPickListValueSequence(this.model.customAttributeId);

                  this.customAttrPickListFinderUI.search.model.cwDocID = this.model.customAttributeId;
                  this.customAttrPickListFinderUI.model.search();
              }
          }
          else {
              Global.throwException("UU0111");
          }
        ]]></script>
      </method>
      <method name="moveUp" type="uimthd">
        <script><![CDATA[
          if(this.customAttrPickListFinderUI.result.selected != null && this.customAttrPickListFinderUI.result.selected.length > 0) {
              if(this.customAttrPickListFinderUI.result.selected.length > 1) {
                  Global.throwException("UU0116");
              }
              else {
                  // moving up
                  var currentRecord = this.customAttrPickListFinderUI.result.selected[0];
                  var currentSequenceNumber = currentRecord.sequenceNumber;
                  if(currentSequenceNumber > 1) {
                      currentRecord.sequenceNumber = currentSequenceNumber - 1;
                      currentRecord.save();
                      this.customAttrPickListFinderUI.result[currentSequenceNumber - 2].sequenceNumber =  currentSequenceNumber;
                      this.customAttrPickListFinderUI.result[currentSequenceNumber - 2].save();
                  }
                  configuration.compressCustomAttrPickListValueSequence();
                  this.customAttrPickListFinderUI.model.search();
                  this.customAttrPickListFinderUI.result.setSelected(currentRecord);
              }
          }
          else {
              Global.throwException("UU0111");
          }
        ]]></script>
      </method>
      <method name="moveDown" type="uimthd">
        <script><![CDATA[
          if(this.customAttrPickListFinderUI.result.selected != null && this.customAttrPickListFinderUI.result.selected.length > 0) {
              if(this.customAttrPickListFinderUI.result.selected.length > 1) {
                  Global.throwException("UU0116");
              }
              else {
                  // moving down
                  var currentRecord = this.customAttrPickListFinderUI.result.selected[0];
                  var currentSequenceNumber = currentRecord.sequenceNumber;
                  if(currentSequenceNumber < this.customAttrPickListFinderUI.result.length) {
                      currentRecord.sequenceNumber = currentSequenceNumber + 1;
                      currentRecord.save();
                      this.customAttrPickListFinderUI.result[currentSequenceNumber].sequenceNumber =  currentSequenceNumber;
                      this.customAttrPickListFinderUI.result[currentSequenceNumber].save();
                  }
                  configuration.compressCustomAttrPickListValueSequence();
                  this.customAttrPickListFinderUI.model.search();
                  this.customAttrPickListFinderUI.result.setSelected(currentRecord);
              }
          }
          else {
              Global.throwException("UU0111");
          }
        ]]></script>
      </method>
