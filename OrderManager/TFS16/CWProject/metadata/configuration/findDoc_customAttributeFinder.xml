<?xml version="1.0" encoding="UTF-8" ?>
<findDoc name="configuration.customAttributeFinder">
  <extends>find_com.conceptwave.system.Finder</extends>
  <input>doc_configuration.customAttributeSearchDoc</input>
  <label>Custom Attribute Finder</label>
  <maxRowsLimit>5000</maxRowsLimit>
  <metaVersion>21</metaVersion>
  <output>doc_configuration.customAttribute</output>
  <sortList>
    <sort type="stitem">
      <path>doc_configuration.customAttribute/leaf_objectType</path>
    </sort>
    <sort type="stitem">
      <path>doc_configuration.customAttribute/leaf_attributeName</path>
    </sort>
  </sortList>
  <type>document</type>
  <vDetailForm>doc_configuration.customAttribute/ui_UserInterface/frmui_Forms/exov_Default</vDetailForm>
  <volatility>10</volatility>
  <searchList>
    <search type="sitem">
      <document>doc_configuration.customAttributeSearchDoc</document>
      <mappedDocument>doc_configuration.customAttribute</mappedDocument>
      <mappedPath>doc_configuration.customAttribute/leaf_objectType</mappedPath>
      <operation>equal</operation>
      <path>doc_configuration.customAttributeSearchDoc/leaf_parentElement</path>
    </search>
    <search type="sitem">
      <document>doc_configuration.customAttributeSearchDoc</document>
      <mappedDocument>doc_configuration.customAttribute</mappedDocument>
      <mappedPath>doc_configuration.customAttribute/leaf_attributeName</mappedPath>
      <operation>like</operation>
      <path>doc_configuration.customAttributeSearchDoc/leaf_attributeName</path>
    </search>
  </searchList>
  <methodList>
    <method name="editablePerm" type="permMethod">
      <privilegesList>
        <privileges type="ppriv">
          <privilege>STC_ConfigPriv</privilege>
        </privileges>
      </privilegesList>
      <privilegesType>SOME</privilegesType>
      <script>return $psCondition;</script>
    </method>
    <method name="addPerm" type="permMethod">
      <privilegesList>
        <privileges type="ppriv">
          <privilege>STC_ConfigPriv</privilege>
        </privileges>
      </privilegesList>
      <privilegesType>SOME</privilegesType>
      <script>return $psCondition;</script>
    </method>
  </methodList>
  <UserInterface name="UserInterface" type="ui">
    <extends>ui_com.conceptwave.system.FinderUserInterface</extends>
    <variableList>
      <variable name="result" type="uivar">
        <flags enum-type="metadataFlag">ARRAY</flags>
        <valueType>doc_configuration.customAttribute</valueType>
      </variable>
      <variable name="search" type="uivar">
        <valueType>doc_configuration.customAttributeSearchDoc/ui_UserInterface</valueType>
      </variable>
      <variable name="detail" type="uivar">
        <flags enum-type="metadataFlag">VALIDATE</flags>
        <valueType>doc_configuration.customAttribute/ui_UserInterface</valueType>
      </variable>
    </variableList>
    <vformList>
      <vform name="Forms" type="frmui">
        <extends>ui_com.conceptwave.system.FinderUserInterface/frmui_Forms</extends>
        <overlayList>
          <overlay name="Result" type="exov">
            <base>ui_com.conceptwave.system.FinderUserInterface/frmui_Forms/vform_Result</base>
            <extends>ui_com.conceptwave.system.FinderUserInterface/frmui_Forms/vform_Result</extends>
            <label>Result</label>
            <overrideList>
              <override name="table" type="elvlt">
                <height>100%</height>
                <width>100%</width>
                <elementList>
                  <element name="customAttributeFinderResultTable" type="eltabl">
                    <doubleClickMethod type="varPath">
                      <variablePathList>
                        <variablePath>ui_com.conceptwave.system.MasterDetailUserInterface/action_showDetailAction</variablePath>
                      </variablePathList>
                    </doubleClickMethod>
                    <onSelectChange type="varPath">
                      <variablePathList>
                        <variablePath>ui_com.conceptwave.system.MasterDetailUserInterface/action_OnSelChanged</variablePath>
                      </variablePathList>
                    </onSelectChange>
                    <variable type="varPath">
                      <variablePathList>
                        <variablePath>findDoc_configuration.customAttributeFinder/ui_UserInterface/uivar_result</variablePath>
                      </variablePathList>
                    </variable>
                    <elementList>
                      <element name="objectType" type="elslct">
                        <label>Object Type</label>
                        <variable type="varPath">
                          <variablePathList>
                            <variablePath>findDoc_configuration.customAttributeFinder/ui_UserInterface/uivar_result</variablePath>
                            <variablePath>doc_configuration.customAttribute/leaf_objectType</variablePath>
                          </variablePathList>
                        </variable>
                        <width>200px</width>
                      </element>
                      <element name="attributeName" type="elfld">
                        <label>Attribute Name</label>
                        <variable type="varPath">
                          <variablePathList>
                            <variablePath>findDoc_configuration.customAttributeFinder/ui_UserInterface/uivar_result</variablePath>
                            <variablePath>doc_configuration.customAttribute/leaf_attributeName</variablePath>
                          </variablePathList>
                        </variable>
                        <width>150px</width>
                      </element>
                      <element name="attributeType" type="elslct">
                        <variable type="varPath">
                          <variablePathList>
                            <variablePath>findDoc_configuration.customAttributeFinder/ui_UserInterface/uivar_result</variablePath>
                            <variablePath>doc_configuration.customAttribute/leaf_attributeType</variablePath>
                          </variablePathList>
                        </variable>
                        <width>150px</width>
                      </element>
                    </elementList>
                  </element>
                </elementList>
              </override>
            </overrideList>
          </overlay>
          <overlay name="Default" type="exov">
            <base>ui_com.conceptwave.system.FinderUserInterface/frmui_Forms/exov_Default</base>
            <extends>ui_com.conceptwave.system.FinderUserInterface/frmui_Forms/exov_Default</extends>
            <label>Default</label>
            <overrideList>
              <override name="detailSection" type="elsect">
                <formReference type="varPath">
                  <variablePathList>
                    <variablePath>ui_com.conceptwave.system.MasterDetailUserInterface/uivar_detailForm</variablePath>
                  </variablePathList>
                </formReference>
                <variable type="varPath">
                  <variablePathList>
                    <variablePath>findDoc_configuration.customAttributeFinder/ui_UserInterface/uivar_detail</variablePath>
                  </variablePathList>
                </variable>
                <visible type="varPath">
                  <variablePathList>
                    <variablePath>ui_com.conceptwave.system.MasterDetailUserInterface/permMethod_detailVisible</variablePath>
                  </variablePathList>
                </visible>
              </override>
              <override name="searchFormSection" type="elsect">
                <formReference type="varPath">
                  <variablePathList>
                    <variablePath>ui_com.conceptwave.system.BaseFinderUserInterface/uivar_searchForm</variablePath>
                  </variablePathList>
                </formReference>
                <variable type="varPath">
                  <variablePathList>
                    <variablePath>findDoc_configuration.customAttributeFinder/ui_UserInterface/uivar_search</variablePath>
                  </variablePathList>
                </variable>
                <visible type="varPath">
                  <variablePathList>
                    <variablePath>ui_com.conceptwave.system.FinderUserInterface/permMethod_showSearchForm</variablePath>
                  </variablePathList>
                </visible>
              </override>
            </overrideList>
          </overlay>
          <overlay name="Menu" type="exov">
            <base>ui_com.conceptwave.system.BaseFinderUserInterface/frmui_Forms/exov_Menu</base>
            <extends>ui_com.conceptwave.system.BaseFinderUserInterface/frmui_Forms/exov_Menu</extends>
            <label>Menu</label>
            <overrideList>
              <override name="cwfCopy" type="eldel"/>
            </overrideList>
          </overlay>
        </overlayList>
      </vform>
    </vformList>
    <methodList>
      <method name="deleteAction" type="usrActionMethod">
        <confirmation>ui_com.conceptwave.system.BaseFinderUserInterface/uimthd_onDeleteConfirm</confirmation>
        <script><![CDATA[
          if(this.result.selected.length > 0) {
              for (var i=0; i<this.result.selected.length; i++) {
                  var udaUsed = tfs.searchCustomAttributesByObjectTypeAndId(this.result.selected[i].objectType, this.result.selected[i].customAttributeId);
                  if(udaUsed.length > 0) {
                      Global.throwException("AE0002", [this.result.selected[i].objectType, this.result.selected[i].attributeName]);
                  }
              }
          }

          this.cw$super_deleteAction();
        ]]></script>
      </method>
      <method name="canDelete" type="permMethod">
        <privilegesList>
          <privileges type="ppriv">
            <privilege>STC_ConfigPriv</privilege>
          </privileges>
        </privilegesList>
        <privilegesType>SOME</privilegesType>
        <script>return $psCondition</script>
      </method>
    </methodList>
  </UserInterface>
  <viewList>
    <view name="customAttributeFinderView" type="findVView">
      <inputOverlay>doc_configuration.customAttributeSearchDoc/ui_UserInterface/frmui_Forms/exov_Default</inputOverlay>
      <label>Find Custom Attributes</label>
      <outputOverlay>findDoc_configuration.customAttributeFinder/ui_UserInterface/frmui_Forms/exov_Result</outputOverlay>
      <searchImmediately>true</searchImmediately>
      <showSearchForm>true</showSearchForm>
    </view>
  </viewList>
</findDoc>