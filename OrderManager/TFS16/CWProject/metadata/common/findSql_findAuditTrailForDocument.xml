        <valueType>doc_common.cwAuditDetails</valueType>
      </variable>
      <variable name="search" type="uivar">
        <valueType>doc_common.auditSearchDoc/ui_UserInterface</valueType>
      </variable>
      <variable name="detail" type="uivar">
