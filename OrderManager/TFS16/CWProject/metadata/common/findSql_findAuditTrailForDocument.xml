                        <variablePath>findSql_common.findAuditTrailForDocument/ui_UserInterface/uivar_result</variablePath>
                      </variablePathList>
                    </variable>
                    <elementList>
                      <element name="lastUpdatedDate" type="eldate">
                        <label>Updated Date</label>
                        <variable type="varPath">
                          <variablePathList>
                            <variablePath>findSql_common.findAuditTrailForDocument/ui_UserInterface/uivar_result</variablePath>
