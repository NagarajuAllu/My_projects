<?xml version="1.0" encoding="UTF-8" ?>
<findSql name="common.findAuditTrailForDocument">
  <dbSchema>ORDER</dbSchema>
  <extends>find_com.conceptwave.system.Finder</extends>
  <input>doc_common.auditSearchDoc</input>
  <label>Find AuditTrail For Document</label>
  <maxRowsLimit>9999</maxRowsLimit>
  <metaVersion>21</metaVersion>
  <output>doc_common.cwAuditDetails</output>
  <type>SQL</type>
  <volatility>1</volatility>
  <methodList>
    <method name="cwOnFinderSQLSel" type="action">
      <system>true</system>
      <script><![CDATA[
        select at.docid, at.updatedby, at.lastupdateddate, at.operationType, at.recNo,
               fat.attributeName, fat.newValue, fat.oldValue
          from cwAuditTrail at, cwFieldAuditTrail fat
         where fat.recNo (+) = at.recNo
        {[0] and at.docid = ?}
        {[2] and fat.attributeName = ?}
      ]]></script>
    </method>
  </methodList>
