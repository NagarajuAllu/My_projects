                          <variablePathList>
                            <variablePath>findSql_common.findAuditTrailForDocument/ui_UserInterface/uivar_result</variablePath>
                            <variablePath>doc_common.cwAuditDetails/leaf_oldValue</variablePath>
                          </variablePathList>
