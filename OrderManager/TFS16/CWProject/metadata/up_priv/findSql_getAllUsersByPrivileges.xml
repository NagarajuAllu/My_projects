  <methodList>
    <method name="cwOnFinderSQLSel" type="action">
      <system>true</system>
      <script><![CDATA[
        select {+*+}
          from cwuser u
         where u.userid in (
          select g.userid
            from cwuserrole g, cwusergroupprivilege gp
           where g.roleid = gp.usergroup
        {[0] and gp.privilege in ?}
        )
      ]]></script>
    </method>
    <method name="cwOnFinderSQLGet" type="action">
      <system>true</system>
