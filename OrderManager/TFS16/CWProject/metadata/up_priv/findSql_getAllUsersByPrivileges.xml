    <methodList>
      <method name="changeAvailability" type="usrActionMethod">
        <confirmation>findSql_up_priv.getAllUsersByPrivileges/ui_UserInterface/uimthd_changeAvailabilityConfirmation</confirmation>
        <script><![CDATA[
          if(this.result.selected != null && this.result.selected.length > 0) {
              for(var i=0; i<this.result.selected.length; i++) {
                  var s = this.result.selected[i];
                  var currentAvailability = up_priv.isUserAvailable(s.userId);
                  up_priv.setUserAvailable(s.userId, !currentAvailability);
              }

              this.model.search();

              return Global.showUserMessage(Global.translateText("AI0008"));
          }
          else {
              Global.throwException("UU0115");
          }
        ]]></script>
      </method>
      <method name="changeAvailabilityConfirmation" type="uimthd">
