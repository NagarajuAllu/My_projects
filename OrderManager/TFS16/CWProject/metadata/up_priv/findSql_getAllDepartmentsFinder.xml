  <methodList>
    <method name="cwOnFinderSQLSel" type="action">
      <system>true</system>
      <script><![CDATA[
        select distinct r.roleid, r.role_name, r.calendar
          from cwrole r, cwusergroupprivilege ugp
         where r.roleid = ugp.usergroup
           and ugp.privilege like 'STC_%'
      ]]></script>
