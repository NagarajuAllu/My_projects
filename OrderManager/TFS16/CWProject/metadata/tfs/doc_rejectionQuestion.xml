    </method>
    <method name="cwOnDocStore" type="action">
      <system>true</system>
      <script><![CDATA[
        if(this.parentAnswerId == null) {
            // check that there are no other questions without parentAnswerId other than the current one
            var rootQuestions = Finder.runFinder("tfs.rejectionRootQuestionsFinder", "select", null);
            if(rootQuestions != null && rootQuestions.length > 0) {
                // found something; checking if the root question found is the current one
                for(var i=0; i<rootQuestions.length; i++) {
                    if(rootQuestions[i].questionId != this.questionId) {
                        Global.throwException("AE0003", rootQuestions[i].textQuestion);
                    }
                }
            }
        }
        else {
            // check that the answer has no questions linked other than the current one
            var searchDoc = new Document("tfs.rejectionQuestionSearchDoc");
            searchDoc.questionId = null;
            searchDoc.parentAnswerId = this.parentAnswerId;
            var questionsForSameAnswer = Finder.runFinder("tfs.rejectionQuestionFinder", "select", searchDoc);
            if(questionsForSameAnswer != null && questionsForSameAnswer.length > 0) {
                // found something; checking if the root question found is the current one
                for(var i=0; i<questionsForSameAnswer.length; i++) {
                    if(questionsForSameAnswer[i].questionId != this.questionId) {
                        Global.throwException("AE0004", questionsForSameAnswer[i].textQuestion);
                    }
                }
            }
        }

        // check that the answer has uniq text
        var searchDocUniqText = new Document("tfs.rejectionQuestionSearchDoc");
        searchDocUniqText.questionId = this.questionId;
        searchDocUniqText.textQuestion = this.textQuestion;
        var questionsForUniqText = Finder.runFinder("tfs.rejectionQuestionFinder", "select", searchDocUniqText);
        if(questionsForUniqText != null && questionsForUniqText.length > 0) {
            for(var i=0; i<questionsForUniqText.length; i++) {
                    Global.throwException("AE0004", questionsForUniqText[i].textQuestion);
            }
        }

        this.cw$super_cwOnDocStore();

        if(this.isStored) {
            Global.showUserMessage(Global.translateText("AI0002"));
        }
        else {
            Global.showUserMessage(Global.translateText("AI0001"));
        }
      ]]></script>
    </method>
  </methodList>
