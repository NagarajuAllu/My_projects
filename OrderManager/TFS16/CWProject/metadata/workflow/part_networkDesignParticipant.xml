      </methodList>
    </operationConditions>
    <operationConditions type="opco">
      <bulkComplete>true</bulkComplete>
      <operation>iface_workflow.networkDesignTeamIF/oper_createReservation</operation>
      <tasksList>
        <tasks>prepareToCreateReservation</tasks>
      </tasksList>
      <methodList>
        <method name="cwOnParticipantOpAct" type="action">
          <system>true</system>
          <script><![CDATA[
            //workflow.computeNextUser(this, "installOrderProcess", "createReservation");
