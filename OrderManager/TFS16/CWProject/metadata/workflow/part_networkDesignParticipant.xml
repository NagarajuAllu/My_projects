      </methodList>
    </operationConditions>
    <operationConditions type="opco">
      <bulkComplete>true</bulkComplete>
      <operation>iface_workflow.networkDesignTeamIF/oper_issueInReservation</operation>
      <tasksList>
        <tasks>performReservationOnGranite</tasks>
      </tasksList>
      <methodList>
        <method name="cwOnPartOpCond" type="action">
          <system>true</system>
          <script><![CDATA[
            // hide action to start BI process for Create Reservation operations if it was already called
            if( this.processOrder.prnDocument ){ // if pnr document exists
                if((this.processDocument.metadataType == "workflow.installOrderProcessDocument") || (this.processDocument.metadataType == "workflow.changeOrderProcessDocument")){// check condition only for installOrderProcess
                    debugPrintln("NDPart.issueInReservation.CONDITION: processDocument.isBICreatedDuringReservation=" + this.processDocument.isBICreatedDuringReservation);
                    return !this.processDocument.isBICreatedDuringReservation; // hide action
                }
            }

            return true;
          ]]></script>
        </method>
        <method name="cwOnParticipantOpAct" type="action">
          <system>true</system>
          <script><![CDATA[
            workflow.overload_computeNextUser(this.processOrder.id, this.processOrder.prnDocument.id, this.workItemDocument.SenderId, "biAssociationProcess", "startBIAssociation");  // compute next user before BI Association process starts
            // commented because the BIAssociation is on the PRN
            // workflow.computeNextUser(this, "biAssociationProcess", "startBIAssociation");

            workflow.completeParticipantActivity(this.processOrder.id, this.workItemDocument, "Issue in reservation");

            if(Global.getWorkListFinder().selected.length == 1) {
                Global.showUserMessage("AI0006");
            }
          ]]></script>
        </method>
        <method name="cwOnPartOpConf" type="action">
          <system>true</system>
          <script><![CDATA[return "UU0167";]]></script>
        </method>
      </methodList>
    </operationConditions>
