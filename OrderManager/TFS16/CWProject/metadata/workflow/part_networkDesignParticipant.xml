    </operationConditions>
    <operationConditions type="opco">
      <bulkComplete>true</bulkComplete>
      <operation>iface_workflow.networkDesignTeamIF/oper_cancelledExistingPRNandPRNR</operation>
      <tasksList>
        <tasks>cancelExistingPRNandPRNR</tasks>
      </tasksList>
      <methodList>
        <method name="cwOnParticipantOpAct" type="action">
          <system>true</system>
          <script><![CDATA[
            workflow.computeNextUser(this, "cancelInstallOrderProcess", "approveCancellation");
            workflow.completeParticipantActivity(this.processOrder.id, this.workItemDocument, "Cancelled Existing PRN & PRNR");

