        <tasks>performReservationOnGranite</tasks>
      </tasksList>
      <methodList>
        <method name="cwOnParticipantOpAct" type="action">
          <system>true</system>
          <script><![CDATA[
            workflow.computeNextUser(this, "installOrderProcess","acceptReservationOnGranite");
            workflow.completeParticipantActivity(this.processOrder.id, this.workItemDocument, "Accept reservation on Granite");

            if(Global.getWorkListFinder().selected.length == 1) {
                Global.showUserMessage("AI0006");
            }
          ]]></script>
        </method>
        <method name="cwOnPartOpConf" type="action">
