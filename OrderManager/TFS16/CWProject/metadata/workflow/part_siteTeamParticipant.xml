<?xml version="1.0" encoding="UTF-8" ?>
<participant name="workflow.siteTeamParticipant">
  <distributionType>Shared</distributionType>
  <duration type="dur">
    <length>P0Y0M1DT0H0M0S</length>
  </duration>
  <interface>iface_workflow.siteTeamIF</interface>
  <label>Site Team Participant</label>
  <metaVersion>21</metaVersion>
  <operationConditionsList>
    <operationConditions type="opco">
      <bulkComplete>true</bulkComplete>
      <operation>iface_workflow.siteTeamIF/oper_acceptTask</operation>
      <tasksList>
        <tasks>acceptingTask_Site</tasks>
      </tasksList>
      <methodList>
        <method name="cwOnParticipantOpAct" type="action">
          <system>true</system>
          <script><![CDATA[
            //workflow.computeNextUser(this, "taskManagementProcess", "acceptingTask_Site");
            workflow.completeParticipantActivity(this.processOrder.id, this.workItemDocument, "Accept Task");

            var order = Order.getOrderById(this.processOrder.id);
            if(order != null) {
                var task = order.getItemById(this.workItemDocument.orderItemId);
                task.siteTeamMemberAcc  = this.workItemDocument.userId;
                task.save();
            }

            if(Global.getWorkListFinder().selected.length == 1) {
                Global.showUserMessage("AI0006");
            }
          ]]></script>
        </method>
        <method name="cwOnPartOpConf" type="action">
          <system>true</system>
          <script><![CDATA[return "UU0167";]]></script>
        </method>
      </methodList>
    </operationConditions>
    <operationConditions type="opco">
      <bulkComplete>true</bulkComplete>
      <operation>iface_workflow.siteTeamIF/oper_rejectTask</operation>
      <tasksList>
        <tasks>acceptingTask_Site</tasks>
      </tasksList>
      <methodList>
        <method name="cwOnParticipantOpAct" type="action">
          <system>true</system>
          <script><![CDATA[
            workflow.completeParticipantActivity(this.processOrder.id, this.workItemDocument, "Reject Task");

            if(Global.getWorkListFinder().selected.length == 1) {
                Global.showUserMessage("AI0006");
            }
          ]]></script>
        </method>
        <method name="cwOnPartOpConf" type="action">
          <system>true</system>
          <script><![CDATA[return "UU0167";]]></script>
        </method>
      </methodList>
    </operationConditions>
  </operationConditionsList>
  <privilege>STC_SitePriv</privilege>
  <removeTasks>true</removeTasks>
  <UserInterface name="UserInterface" type="ui">
    <extends>ui_com.conceptwave.system.WLTaskUserInterface</extends>
    <vformList>
      <vform name="Forms" type="frmui">
        <extends>ui_com.conceptwave.system.WLTaskUserInterface/frmui_Forms</extends>
      </vform>
    </vformList>
  </UserInterface>
</participant>