<?xml version="1.0" encoding="UTF-8" ?>
<findSql name="granite.findUDAValueForWorkOrder">
  <dbSchema>GRANITE</dbSchema>
  <extends>find_com.conceptwave.system.Finder</extends>
  <input>doc_granite.udaSearchDoc</input>
  <label>Find UDA Value For WorkOrder</label>
  <maxRowsLimit>100</maxRowsLimit>
  <metaVersion>25</metaVersion>
  <output>doc_granite.udaValueDocument</output>
  <type>SQL</type>
  <volatility>10</volatility>
  <methodList>
    <method name="cwOnFinderSQLSel" type="action">
      <system>true</system>
      <script><![CDATA[
        select attr_value
          from workorder_attr_settings woas, val_attr_name van
         where woas.val_attr_inst_id = van.val_attr_inst_id
        {[0] and woas.workorder_inst_id = ?}
        {[1] and van.attr_name = ?}
        {[2] and van.group_name = ?}
      ]]></script>
    </method>
  </methodList>
