  <type>SQL</type>
  <volatility>0</volatility>
  <methodList>
    <method name="cwOnInitSearch" type="uimthd">
      <script><![CDATA[
        if(this.searchDocument.today && (this.searchDocument.fromDate != null || this.searchDocument.toDate != null)) {
            Global.throwException("AE0217");
        }

        if(!this.searchDocument.today && (this.searchDocument.fromDate == null && this.searchDocument.toDate == null)) {
            Global.throwException("AE0218");
        }

        var userId = this.searchDocument.userId;
        if(userId != null) {
            while(userId.charAt(0) == "%") {
                userId = userId.substring(1);
            }

            while(userId.endsWith("%")) {
                userId = userId.substring(0, userId.length -1);
            }
        }

        if(userId != null && userId.trim().length > 0 && userId != "%") {
            this.searchDocument.userId = "%" + userId + "%";
        }
        else {
            this.searchDocument.userId = "%";
        }

        debugPrintln("search = " + this.searchDocument.toXML());
      ]]></script>
    </method>
    <method name="cwOnFinderSQLSel" type="action">
      <system>true</system>
      <script><![CDATA[
        select userid, action, count(*)
          from stcw_fo_user_action
         where 1=1
        {[0] and userid like ?}
        {[1,B] and trunc(when) = trunc(sysdate)}
        {[2] and trunc(when) >= ?}
        {[3] and trunc(when) <= ?}
        group by userid, action
        order by userid, action
      ]]></script>
    </method>
  </methodList>
