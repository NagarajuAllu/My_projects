    <method name="cwOnDocStore" type="action">
      <system>true</system>
      <script><![CDATA[
        this.cw$super_cwOnDocStore();

        // validating data
        var convertValueFinder = new Finder ("stcconf.mapCOMToGraniteValueFinder");
        convertValueFinder.searchDocument.comAttributeName  = this.attributeName.toUpperCase();
        convertValueFinder.searchDocument.comAttributeValue = this.comAttributeValue.toUpperCase();
        var resultList = convertValueFinder.search();

        if(resultList != null && resultList.length > 0) {
            if(! this.isStored) {
                Global.throwException("AE0085");
            }
        }


        if(this.isStored) {
            Global.showUserMessage(Global.translateText("AI0002"));
        }
        else {
            Global.showUserMessage(Global.translateText("AI0001"));
        }
      ]]></script>
    </method>
