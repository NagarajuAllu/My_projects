    <method name="cwOnDocStore" type="action">
      <system>true</system>
      <script><![CDATA[
        this.cw$super_cwOnDocStore();

        // validating data
        var serviceTypeMapFinder = new Finder ("stcconf.mapCOMToGraniteServiceTypeFinder");
        serviceTypeMapFinder.searchDocument.serviceType  = this.comServiceType;
        var resultList = serviceTypeMapFinder.search();

        if(resultList != null && resultList.length > 0) {
            if(! this.isStored) {
                Global.throwException("AE0085");
            }
        }

        if(this.isStored) {
            Global.showUserMessage(Global.translateText("AI0002"));
        }
        else {
            Global.showUserMessage(Global.translateText("AI0001"));
        }
      ]]></script>
    </method>
