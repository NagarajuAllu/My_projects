      <child name="waitTimeforRetry" type="scriptActivity">
        <label>Wait Time for Retry</label>
        <schedule type="sched">
          <duration type="dur">
            <methodList>
              <method name="cwOnDuration" type="action">
                <system>true</system>
                <script><![CDATA[
                  // configured time for sleeping
                  var submitSleep = Global.getConfigVariable("SUBMITSLEEP", "10");

                  // if downtime
                  var ifName = (this.processDocument.isWholesale ? (this.processDocument.isQuote ? "grws.XngQuoteService" : "grws.XngOrderService") :
                                                                   (this.processDocument.isHome ? "cimhJMS.XngServicesWR" : "cimeWS.XngOrderService")
                                                                   );

                  debugPrintln(stcc.getSysdateForLog() + "[" + this.id + "] - processDocumentInCompensate: " + this.processDocument.toXML());
                  debugPrintln(stcc.getSysdateForLog() + "[" + this.id + "] - ifName: " + ifName);


                  var ifDelay = Global.getInterfaceDelay(ifName);
                  ifDelay = ((ifDelay != null) ? ifDelay : "10") ;

                  // sleepTime of the process = max(submitSleep, ifDelay);
                  var sleepTime = ((submitSleep > ifDelay) ? submitSleep : ifDelay);

                  debugPrintln(stcc.getSysdateForLog() + "[" + this.id + "] - sleep for : " + sleepTime + " secs -- {" + submitSleep + ";" + ifDelay + "}");

                  return sleepTime;
                ]]></script>
              </method>
            </methodList>
          </duration>
        </schedule>
