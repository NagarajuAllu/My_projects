            <script><![CDATA[
              var debugHeader = "[" + this.process.id + "] - SendRestorationToCRM - ";

              var processDocument = this.process.processDocument;
              processDocument.exceptionType = null;

              try {
                    // extracting Granite response must be forward to EAI
                    var graniteInput = stcw.findGenericProcessMessage(this.process.id, "GRANITE_REQUEST", "wgws:restoration");
                    var request = new DataStructure("sirestor:processRequest_el");

              debugPrintln(stcc.getSysdateForLog() + debugHeader + "graniteInput = '" + graniteInput.toXML() + "'");

                          stcw.map_graniteRestoration_CRMRestoration (request, graniteInput);

                          // check payload size
                          stcc.checkPayloadToCRMSize(request, this.process.processDocument.interOperationName);

                          // sending data to EAI
                          var response = stcw.sendRestorationToEAI(request, this.process.id);

                          // managing response
                          rpts.updateHistoryEvent (this);

                          if (response == null) {
                                processDocument.exceptionType = "Interface";
                          }
                          else {
                                processDocument.ackResult = response.Acknowledgement.Status;
                                stcw.storeGenericProcessMessage(this.process.id, "CRM_RESPONSE", response);
                          }
                    }
                    catch(exc) {
              debugPrintln(stcc.getSysdateForLog() + debugHeader + "Catched Exception " + exc.message);
                          processDocument.exceptionType = "Application";
                    }
            ]]></script>
          </method>
